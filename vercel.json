{
  "functions": {
    "src/app/api/*/route.ts": {
      "maxDuration": 300
    },
    "api/generate-video-python.py": {
      "runtime": "@vercel/python@3.1.0",
      "maxDuration": 300
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.11"
    }
  },
  "installCommand": "python3.11 -m pip install --upgrade pip && pip install -r api/requirements.txt"
} 